<% include ../page/nav %>

<div class='container'>
  


<form action='/movieupload' method='post' class="form-horizontal">
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">Movie Name</label>
    <div class="col-sm-8">
      <input type="text" name='name' class="form-control" id="inputEmail3" placeholder="Bahubali 2">
    </div>
  </div>

  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">Language</label>
    <div class="col-sm-8">
      <input type="text" name='language' class="form-control" id="inputEmail3" placeholder="hindi">
    </div>
  </div>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">Type</label>
    <div class="col-sm-8">
      <input type="text" name='type' class="form-control" id="inputEmail3" placeholder="A or UA">
    </div>
  </div>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">Dimension</label>
    <div class="col-sm-8">
      <input type="text" name='dimension' class="form-control" id="inputEmail3" placeholder="2D or 3D">
    </div>
  </div>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">Release Date</label>
    <div class="col-sm-8">
      <input type="text" name='releaseDate' class="form-control" id="inputEmail3" placeholder="31st march 2017">
    </div>
  </div>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">Run Time</label>
    <div class="col-sm-8">
      <input type="text" name='runTime' class="form-control" id="inputEmail3" placeholder="2 hrs 10 min">
    </div>
  </div>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">Director</label>
    <div class="col-sm-8">
      <input type="text" name='director' class="form-control" id="inputEmail3" placeholder="Shivam Nair">
    </div>
  </div>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">Genre</label>
    <div class="col-sm-8">
      <input type="text" name='genre' class="form-control" id="inputEmail3" placeholder="Action, Thriller">
    </div>
  </div>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">Cast</label>
    <div class="col-sm-8">
      <input type="text" name='cast' class="form-control" id="inputEmail3" placeholder="Prabhas, Rana ">
    </div>
  </div>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">Synopsis</label>
    <div class="col-sm-8">
      <input type="text" name='synopsis' class="form-control" id="inputEmail3" placeholder="Movie description">
    </div>
  </div>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">City</label>
    <div class="col-sm-8">
      <input type="text" name='city' class="form-control" id="inputEmail3" placeholder="Bahubali 2">
    </div>
  </div>




  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Upload</button>
    </div>
  </div>
</form>

</div>


