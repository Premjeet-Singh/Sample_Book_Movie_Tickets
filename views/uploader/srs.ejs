<div class='container'>
  


<form action='/movieupload' method='post' class="form-horizontal">
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">Time</label>
    <div class="col-sm-8">
      <input type="time" name='time' class="form-control" id="inputEmail3" placeholder="09:00 AM">
    </div>
  </div>

  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">Screen</label>
    <div class="col-sm-8">
      <input type="text" name='screen' class="form-control" id="inputEmail3" placeholder="screen 1">
    </div>
  </div>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">Movie</label>
    <div class="col-sm-8">
      <input type="text" name='movieName' class="form-control" id="inputEmail3" placeholder="Baahubali 2: The Conclusion">
    </div>
  </div>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">Price</label>
    <div class="col-sm-8">
      <input type="text" name='price' class="form-control" id="inputEmail3" placeholder="90, 120, 150">
    </div>
  </div>





  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Upload</button>
    </div>
  </div>
</form>

